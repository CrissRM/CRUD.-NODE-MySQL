extends ../layout/layout.pug
block content
  
  div.container.mt-5
    div.row
      div.col-md-5
        div.card
          div.card-body
             form(action="/update/"+customer[0].id,method="POST")
              input(type="text",name="nombre",value=customer[0].nombre,class="form-control")
              br
              input(type="text",name="direccion",value=customer[0].direccion,class="form-control")
              br
              input(type="text",name="phone",value=customer[0].phone,class="form-control")
              br
              button(type='submit',class="btn btn-primary") Edit